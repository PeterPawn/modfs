# MODFS_MODSCRIPT
# SUPPORTS precheck postcheck install language(en,de)
# NAME executable files on USB volumes
# DESCRIPTION en
# prevent mount with 'noexec' option for ALL USB volumes with native file-systems
# DESCRIPTION de
# Mounten aller USB-Speicher (mit Linux-Dateisystemen) ohne 'noexec'-Option
# EOH
#
# process parameters
#
language=$1
rootdir="$2"
mode=$3
step=$4
[ ${#4} -eq 0 ] && exit 59 # invalid call
#
# constants
#
init_script="etc/hotplug/udev-mount-sd"
search_string="mount -t [^av].*noexec"
change_command="s:\(mount -t [^av].*\)noexec:\1exec:"
#
# execute the requested step
#
rc=0
#
case $step in
	precheck)
		grep -q -- "$search_string" "$rootdir/$init_script" 2>/dev/null
		rc=$?
		if [ $rc -eq 1 ]; then
			case "$language" in
				de)
					printf "Die Modifikation wurde bereits ausgeführt oder ist nicht erforderlich.\n" 1>&2
					;;
				*)
					printf "The patch was applied already or is not necessary.\n" 1>&2
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	postcheck)
		grep -q -- "$search_string" "$rootdir/$init_script" 2>/dev/null
		rc=$?
		if [ $rc -eq 0 ]; then
			case "$language" in
				de)
					printf "Die Modifikation wurde NICHT erfolgreich ausgeführt.\n" 1>&2
					;;
				*)
					printf "The patch was NOT applied successfully.\n" 1>&2
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	install)
		sed -e "$change_command" -i "$rootdir/$init_script"
		rc=0
		;;
	*)
		rc=59
		;;
esac
#
exit $rc
