# MODFS_MODSCRIPT
# SPDX-License-Identifier: GPL-2.0-or-later
# SUPPORTS precheck postcheck install language(en,de)
# NAME re-add mounting a whole SquashFS partition found on USB devices
# DESCRIPTION en
# AVM has removed mounting of SquashFS partitions, this will be reverted here.
# DESCRIPTION de
# Das von AVM entfernte Mounten von SquashFS-Partitionen auf USB-GerÃ¤ten wird
# wieder aktiviert.
# EOH
#
# process parameters
#
language=$1
rootdir=$2
mode=$3
step=$4
[ ${#4} -eq 0 ] && exit 59 # invalid call
#
# variables
#
rc=0
check_filename="$rootdir/etc/hotplug/udev-mount-sd"
unchanged="squashfs"
#
# apply
#
patch_file()
{
	exec_or_noexec="$(sed -n -e "s:if mount -t [^\(antfs\|vfat\)].*\(noexec\|[^n][^o]exec\).*:\1:p" "$check_filename")"
	sed -e "/^case \$filesystem_type in/a\
squashfs)\
echo "MOUNT: mount -t 'squashfs' $DEVNODE $MNTPATH" >/dev/console\
if mount -t squashfs -o ro,${exec_or_noexec} \$DEVNODE "\$MNTPATH"; then\
new_filesystem=true\
fi\
;;
" -i "$check_filename"
}
#
# execute steps
#
case $step in
	precheck)
		grep -q "$unchanged" $check_filename 2>/dev/null 1>&2
		rc=$?
		if [ $rc -eq 0 ]; then
			case "$language" in
				de)
					echo "Die Modifikation wurde bereits angewendet oder ist nicht erforderlich."
					;;
				*)
					echo "The startup file is modified already or modification isn't necessary."
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	postcheck)
		grep -q "$unchanged" $check_filename 2>/dev/null 1>&2
		rc=$?
		if [ $rc -ne 0 ]; then
			case "$language" in
				de)
					echo "Die Modifikation war nicht erfolgreich."
					;;
				*)
					echo "The startup file seems to be unmodified."
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	install)
		patch_file
		rc=0
		;;
	*)
		rc=59
		;;
esac
exit $rc
